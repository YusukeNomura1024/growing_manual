<!DOCTYPE html>
<html>
  <head>
    <title>GrowingManual</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="header">
      
      <% if user_signed_in? %>
        <%= render 'partial/user_head' %>
      <% elsif admin_user_signed_in? %>
        <%= render 'partial/admin_head' %>
      <% else %>
        <%= render 'partial/other_head' %>
      <% end %>
    </header>

    <%= yield %>
  </body>
</html>

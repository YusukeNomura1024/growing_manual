<h2><%= @manual.title + "の評価一覧" %></h2>
<h3><%= link_to 'マニュアルに戻る', manual_path(@manual) %></h3>
<div>
  <%= "平均評価：#{@manual.average_rate}" %>
  <%= @manual.average_star %>
  <%= "評価件数：#{@manual.reviews.count}" %>
</div>

  <div>
    <% if @review.id.nil? %>
      <h3>あなたの評価はまだありません</h3>
      <%= link_to '評価する', new_manual_review_path, remote: true %>
    <% else %>
      <div>
        <h3>あなたの評価</h3>
        <span><%= @review.star %></span>
      </div>
      <%= @review.comment %>
      <%= link_to '編集する', edit_manual_review_path(@manual, @review), remote: true %>
    <% end %>
  </div>


<div id="mask" class="hidden"></div>

<div id="form-area" class="hidden">
  <%= render 'public/reviews/form', review: @review, manual: @manual, button_name: @button_name %>
</div>

<h3>みんなの評価</h3>
<% @reviews.each do |review| %>
  <ul>
    <li><%= review.user.full_name %></li>
    <li><%= "評価：#{review.star}" %></li>
    <li><%= review.created_at.strftime('%Y/%m/%d %H:%M:%S')  %></li>
    <li><%= review.comment %></li>
    <li><%= link_to '通報する', '#' %></li>

  </ul>
<% end %>

<%= paginate @reviews %>
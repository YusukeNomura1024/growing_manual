  <%= form_with model: [manual,review], remote: true do |f| %>
  <div class="form-group" id="star">
    <h3 class="title--center">あなたの評価</h3>
    <%= f.hidden_field :rate, value: review.rate, id: "review_star" %>
    <div id="stars">
          <span class="star rate_star" data-star="1">☆</span>
          <span class="star rate_star" data-star="2">☆</span>
          <span class="star rate_star" data-star="3">☆</span>
          <span class="star rate_star" data-star="4">☆</span>
          <span class="star rate_star" data-star="5">☆</span>
    </div>
  </div>
  <div class="modal__btn_area">
    <%= f.submit button_name, id: "edit_button", class: "btn btn-outline-primary btn--small" %>
    <span id="cancel_button" class=" btn btn-outline-cancel btn--small">キャンセル</span>
    <% if !review.id.nil? %>
      <%= link_to '取り消す', manual_review_path(manual, review), method: :delete, data: { confirm: '削除しますか？' }, class: "btn btn-outline-danger btn--small" %>
    <% end %>
  </div>
<div>
  <%= f.text_area :comment, placeholder: "コメントを入力", class: "modal__text_field ml-0" %>
</div>
<% end %>

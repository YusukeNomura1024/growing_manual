  <%= form_with model: [manual,review], remote: true do |f| %>
  <div class="form-group" id="star">
    <%= f.label :rate, 'あなたの評価' %>
    <%= f.hidden_field :rate, value: review.rate, id: "review_star" %>
    <div id="stars">
          <span class="star" data-star="1">☆</span>
          <span class="star" data-star="2">☆</span>
          <span class="star" data-star="3">☆</span>
          <span class="star" data-star="4">☆</span>
          <span class="star" data-star="5">☆</span>
    </div>
  </div>
  <div>
    <%= f.submit button_name, id: "edit_button" %>
    <div id="cancel_button">キャンセル</div>
    <% if !review.id.nil? %>
      <%= link_to '取り消す', manual_review_path(manual, review), method: :delete, data: { confirm: '削除しますか？' } %>
    <% end %>
  </div>
<div>
  <%= f.label :comment, 'コメント' %>
  <%= f.text_area :comment %>
</div>
<% end %>

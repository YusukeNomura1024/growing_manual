<h2>会員情報編集ページ</h2>
<h3>会員情報</h3>
<%= form_with model: @user, local: true do |f| %>
<ul>
  <li>
    <%= f.label :full_name, '名前（フルネーム）' %>
    <%= f.text_field :full_name %>
  </li>
  <li>
    <%= f.label :pen_name, 'ペンネーム（公開されます）' %>
    <%= f.text_field :pen_name %>
  </li>
  <li>
    <%= f.label :email, 'メールアドレス' %>
    <%= f.text_field :email %>
  </li>
</ul>
<%= f.submit '編集内容を保存' %>
<% end %>
<%= link_to '退会する', user_unsubscribe_path(current_user) %>
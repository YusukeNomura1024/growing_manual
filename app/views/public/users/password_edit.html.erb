<main>
  <%= render 'breadlists/user_edit', user: @user %>
  <div class="main__content main__content_w500">
    <h2 class="main__content-title">会員パスワード編集</h2>
    <%= form_with model: @user, local: true do |f| %>
    <ul class="form-field panel">
      <% @user.errors.full_messages.each do |message| %>
        <div class="error_area">
          <%= message %>
        </div>
      <% end %>
      <li class="form">
        <%= f.label :password, '新しいパスワード', class: "form__label" %>
        <%= f.password_field :password, placeholder: "6文字以上の半角英数字", class: "form__input" %>
      </li>
      <li class="form">
        <%= f.label :password_confirmation, 'パスワード確認', class: "form__label" %>
        <%= f.password_field :password_confirmation, placeholder: "同じパスワードを入力", class: "form__input" %>
      </li>
      <%= f.hidden_field :reset_password_token %>
    </ul>
    <%= f.submit '編集内容を保存', class: "btn btn-block btn-outline-primary" %>
    <% end %>
    <%= link_to 'キャンセル', user_path(current_user), class: "btn btn-outline-cancel" %>
  </div>
</main>
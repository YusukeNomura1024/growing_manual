<h2>人気順 ｜ <%= link_to '新着順', manuals_path %></h2>

<h2>みんなのマニュアル</h2>
<div>
  <% if @list_title.nil? %>
    <h2>一覧</h2>
  <% else %>
    <h2><%= @list_title %></h2>
  <% end %>
</div>

<%= render 'public/tags/list', tags: @tags %>

<ul>
  <li>作成日</li>
  <li>タイトル</li>
  <li>お気に入り件数</li>
  <li>評価</li>
  <li>公開ステータス</li>
</ul>
<% @manuals.each do |manual| %>
<ul>
 <li><%= manual.created_at.strftime('%Y.%m.%d') %></li>
 <li><%= link_to "#{manual.title}", manual_path(manual) %></li>
 <li>♥<%= manual.bookmarks.count %></li>
 <li>☆☆☆☆☆</li>
 <li style="<%= manual.status_style %>"><%= manual.status_text %></li>
</ul>
<% end %>


<%= paginate @manuals %>
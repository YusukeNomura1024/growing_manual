<main class=main>
  <%= render 'breadlists/top' %>
  <div class="main__top_content">

    <h2>みんなのマニュアル
      <% if @list_title.nil? %>
      <% else %>
        <%= @list_title %>
      <% end %>
    </h2>

    <div class="switch_order">
      <!--新着順クリックしたら、paramsにsort:を送る-->
      <% case params[:sort] %>
      <% when 'bookmarks' %>
        <h2><i class="fas fa-caret-right"></i>人気順<i class="fas fa-caret-left"></i><%= link_to '新着順', root_path(sort: 'created_at'), class: "switch_order__right_btn" %></h2>
      <% when 'created_at' %>
        <h2><%= link_to '人気順', root_path(sort: 'bookmarks'), class: "switch_order__left_btn" %><i class="fas fa-caret-right"></i>新着順<i class="fas fa-caret-left"></i></h2>
      <% end %>
    </div>

    <div class="search_box d-inline-block">
      <%= form_with url: search_manual_path, method: :get, local: true do |f| %>
        <%= f.text_field :keyword, value: @keyword, placeholder: "キーワードを入力", class: "search_box__form" %>
        <%= f.hidden_field :target, value: 'everyone' %>
        <%= button_tag "検索", type: 'submit', class: "search_button" %>
      <% end %>
    </div>

  </div>

  <div class="main__left_content">
    <%= render 'public/tags/list', tags: @tags %>
  </div>

  <div class="main__center_content everyone_manual_list list__group">
    <ul class="list__head">
      <li class="list__created_at_date">作成日</li>
      <li class="list__title">タイトル</li>
      <li class="list__bookmarked_users">お気に入り</li>
      <li class="list__rate">評価</li>
      <li class="list__creator">投稿者</li>
    </ul>
    <% @manuals.each do |manual| %>
    <ul class="list__body">
     <li class="list__created_at_date"><%= manual.created_at.strftime('%Y.%m.%d') %></li>
     <li class="list__title"><%= link_to "#{manual.title}", manual_path(manual) %></li>
     <li class="list__bookmarked_users"><span class="bookmark-color">♥ <%= manual.bookmarked_users.count %></span></li>
     <li class="list__rate"><%= manual.average_star %></li>
     <li class="list__creator"><%= link_to manual.user.pen_name, user_path(manual.user) %></li>
    </ul>
    <% end %>
  </div>

  <div class="main__bottom_content">
    <%= paginate @manuals %>
  </div>

</main>

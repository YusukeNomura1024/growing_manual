var memoLinkEntry = document.getElementById('memo_link_entry');
var mask = document.getElementById('mask');
memoLinkEntry.innerHTML = '<%= j(render 'public/memos/confirm', memo_link: @memo_link, memo: @memo) %>'
memoLinkEntry.classList.remove('hidden');
mask.classList.remove('hidden');

mask.addEventListener('click', function(){
  memoLinkEntry.classList.add('hidden');
  mask.classList.add('hidden');
});

var cancelButton = document.getElementById('cancel_button');
cancelButton.addEventListener('click', function(){
  memoLinkEntry.classList.add('hidden');
  mask.classList.add('hidden');
});


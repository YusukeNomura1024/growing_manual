<h2>メモ編集</h2>
<%= form_with model: @memo, local: true do |f| %>
  <div>
    <%= f.label :name, '題名' %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :url, '参考URL' %>
    <%= f.text_field :url %>
  </div>
  <div>
    <%= f.label :description, '説明' %>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.label :code, 'コード' %>
    <%= f.text_area :code %>
  </div>
  <div id="categories_list">
    <%= render 'public/categories/list', memo: @memo,categories: @categories %>
  </div>

  <%= f.submit '新規作成' %>

<% end %>
<%= form_with model: @category, url: {controller: 'categories', action: 'create'}, remote: true do |f| %>
<div class="category__form-group">
  <div class="category__form">
  <%= f.text_field :name, placeholder: "カテゴリーを新規登録", id: "category_form" %>
  <%= f.submit 'カテゴリーを登録' %>
  </div>
</div>
<% end %>

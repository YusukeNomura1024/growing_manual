<h2>新規登録ページ</h2>

<%= form_with model: @user, url: user_registration_path, local: true do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :full_name, '名前（フルネーム）' %><br />
    <%= f.text_field :full_name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :pen_name, 'ペンネーム（公開されます）' %><br />
    <%= f.text_field :pen_name, autocomplete: "nickname" %>
  </div>

  <div class="field">
    <%= f.label :email, 'メールアドレス' %><br />
    <%= f.email_field :email, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, 'パスワード' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, 'パスワード（確認用）' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<h2>すでに会員登録済みの方</h2>
<%= render "public/shared/links" %>
